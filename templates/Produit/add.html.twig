{% extends 'back/base.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('/public/css/style.css') }}">

<div id="main">
    <!-- Post -->
    <section class="post">
        <header class="major">
            <h1>Ajouter nouveau Produit</h1>
        </header>

        <!-- Messages Flash -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="col-md-12">
            {{ form_start(formB) }}
            <fieldset>
                {{ form_row(formB.nom, {'attr': {'placeholder': 'Nom du produit'}}) }}
                {{ form_row(formB.prix, {'attr': {'placeholder': 'Prix'}}) }}
                {{ form_row(formB.quantity, {'attr': {'placeholder': 'Quantity'}}) }}
                {{ form_row(formB.description, {'attr': {'placeholder': 'Description'}}) }}
                {{ form_row(formB.image, {'attr': {'placeholder': 'Image'}}) }}
            </fieldset>
        </div>

        <div class="col-md-12">
            <fieldset>
                <button type="submit" class="btn btn-success">Ajouter !</button>
            </fieldset>
        </div>

        {{ form_end(formB) }}
    </section>
</div>
{% endblock %}
